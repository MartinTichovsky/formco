{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "demo": ["packages/demo/src"],
      "examples": ["packages/examples/src"],
      "formco": ["packages/formco/src"]
    }
  },

  "exclude": ["node_modules", "lib", "build"]
}
